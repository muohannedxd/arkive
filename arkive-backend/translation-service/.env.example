# Translation Service Configuration
API_HOST=0.0.0.0
API_PORT=8000
ENVIRONMENT=development

# Kafka Configuration
KAFKA_BROKER=kafka:29092
KAFKA_TOPIC_REQUESTS=translation-requests
KAFKA_TOPIC_RESPONSES=translation-responses
KAFKA_GROUP_ID=translation-service-group

# Translation API Configuration (Google Translate or similar)
TRANSLATION_API_KEY=your-translation-api-key
TRANSLATION_API_URL=https://translation.googleapis.com/language/translate/v2

# CORS Configuration
CORS_ORIGINS=*

# Logging
LOG_LEVEL=INFO

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600